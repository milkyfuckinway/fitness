doctype html

include ../components

block variables

html(lang="ru")
  head
    title='Фитнес Центр SYPERGUM'
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1.0")
    meta(http-equiv="X-UA-Compatible", content="ie=edge")
    meta(name="description", content="SYPERGUM")
    //- генерируйте favicon тут - https://realfavicongenerator.net/
    //- в подключение фавикон манифеста обязательно добавьте строчки crossorigin="use-credentials"
    //- используйте только для шрифта находящегося на первом экране
    //- link(rel="preload", href="fonts/placeholder.woff2", as="font", crossorigin="anonymous")

    link(href="./img/content/header/mobile/*@2x.webp" rel="preload" as="image" media="screen and (max-width: 767px) and (min-resolution: 1.5dppx)")
    link(href="./img/content/header/mobile/*.webp" rel="preload" as="image" media="screen and (max-width: 767px) and (max-resolution: 1dppx)")
    link(type="font/woff2" href="./fonts/alumnisans-600.woff2" rel="preload" as="font" crossorigin)
    link(type="font/woff2" href="./fonts/robotocondensed-400.woff2" rel="preload" as="font" crossorigin)

    link(href="./favicon/apple-touch-icon.png" rel="apple-touch-icon" sizes="180x180")
    link(type="image/png" href="./favicon/favicon-32x32.png" rel="icon" sizes="32x32")
    link(type="image/png" href="./favicon/favicon-16x16.png" rel="icon" sizes="16x16")
    link(href="./favicon/site.webmanifest" rel="manifest" crossorigin="use-credentials")
    link(href="./favicon/safari-pinned-tab.svg" rel="mask-icon" color="#5bbad5")
    link(href="./favicon/favicon.ico" rel="shortcut icon")
    meta(name="msapplication-TileColor" content="#9f00a7")
    meta(name="msapplication-config" content="./favicon/browserconfig.xml")
    meta(name="theme-color" content="#ffffff")



    //- При необходимости вы можете добавить разметку Open graf. - const Open graf = true
    if (openGraf)
      //- Обязательно измените содержание контента на тот что необходим!
      //- Введите заголовок
      meta(property="og:title", content="Лига решений")
      //- Введите заголовок путь к картинке
      meta(property="og:image", content="https://24fortest.ru/img/content/sharing.png")
      //- Введите необходимый тип
      meta(property="og:type", content="article")
      //- Введите адрес сайта
      meta(property="og:url", content="https://24fortest.ru/")
      //- Введите описание
      meta(property="og:description", content="Простые и понятные решения в помощь разработчикам от команды Лига А")

    link(href="css/style.min.css", rel="stylesheet")

  body
    +sprite()
    .wrapper(class=wrapperMods)
      if (hasHeader)
        +header(headerMods, currentUrl)

      block main

      if (hasFooter)
        +footer(footerMods)

    block modals

    script(src="js/vendor.min.js")
    script(src="js/main.min.js")
