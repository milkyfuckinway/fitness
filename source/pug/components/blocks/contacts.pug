mixin contacts
  -
    const formHeading = "Бесплатное занятие";
    const contactsHeading = "Контакты";
    const contacts = [
      {
        title: "Адрес",
        text: "г. Омск, ул. 60 лет Октября, 7",
      },
      {
        title: "График работы",
        text: "Пн-Вс: с 8:00 до 22:00",
      },
      {
        href: 'tel:+78005555555',
        title: "Телефон",
        text: "8-800-555-55-55",
      },
      {
        href: 'mailto:omsk@supergym.ru',
        title: "Email",
        text: "omsk@supergym.ru",
      },
    ];

  section.contacts
    .container
      h2=contactsHeading
      ul
        each item in contacts
          li
            h3=`${item.title}:`
            if(item.href)
              a(href=item.href)=item.text
            else
              p=item.text
